    // Vault address
    IVault public immutable vault;
    // Vault's asset which is lending or borrowing
    address public immutable asset;
    // The slippage percent value in case of requestLiquidity()
    uint256 public slippage;
    // JIT caller -> bool
    mapping(address => bool) public whitelistedCaller;

    event SetSlippage(uint256 slippage);
    event SetWhitelistedCaller(address caller, bool enabled);

    error AG_INVALID_CONFIGURATION();
    error AG_TOTAL_ASSET_IS_ZERO();

    constructor(IDebtManager _manager) {
        manager = _manager;
        vault = IVault(_manager.vault());
        asset = vault.asset();
    }

    /**
     * @dev Set the slippage percent value
     * - Caller is Admin
     * @param _slippage The slippage percent value, at most 0.01%
     */
    function setSlippage(uint256 _slippage) external payable onlyOwner {
        if (_slippage >= 10) revert AG_INVALID_CONFIGURATION();

        slippage = _slippage;

        emit SetSlippage(_slippage);
    }

    /**
     * @dev Set the whitelisted caller.
     * - Caller is Admin
     * @param _caller The JIT caller address.
     * @param _enabled True if whitelisted caller, else false.
     */
    function setWhitelistedCaller(
        address _caller,
        bool _enabled
    ) external payable onlyOwner {
        whitelistedCaller[_caller] = _enabled;

        emit SetWhitelistedCaller(_caller, _enabled);
    }

    /**
     * @dev Borrow asset from `_silo`
     *      If there is not enough liquidity in silo, it would try to make enough liquidity via vault.
     * - Caller is anyone but if `msg.sender` != `_borrower`, only whitelisted caller.
     * @param _silo The silo address.
     * @param _borrowAmount The borrowing amount.
     * @param _collateralAmount The collateral amount, if not zero, perform deposit collateral first.
     * @param _collateralAsset The collateral asset address.
     * @param _borrower The borrower address.
     * @param _receiver The receiver address of borrowing asset.
     */
    function borrowAsset(
        address _silo,
        uint256 _borrowAmount,
        uint256 _collateralAmount,
        address _collateralAsset,
        address _borrower,
        address _receiver
    ) external nonReentrant {
        if (_borrower != msg.sender) {
            // Only whitelisted contract can use the JIT feature instead of borrower.
            if (!whitelistedCaller[msg.sender] || !Address.isContract(msg.sender)) {
                revert AG_INVALID_CONFIGURATION();
            }
        }

        address strategy = manager.siloToStrategy(_silo);
        if (_collateralAsset != ISturdyPair(_silo).collateralContract()) revert AG_INVALID_CONFIGURATION();
        if (asset != ISturdyPair(_silo).asset()) revert AG_INVALID_CONFIGURATION();
        if (strategy == address(0)) revert AG_INVALID_CONFIGURATION();
        if (_borrowAmount == 0) revert AG_INVALID_CONFIGURATION();
        if (_receiver == address(0)) revert AG_INVALID_CONFIGURATION();

        (uint256 totalAsset, ) = ISturdyPair(_silo).totalAsset();
        if (totalAsset == 0) revert AG_TOTAL_ASSET_IS_ZERO();

        (uint256 totalBorrow, ) = ISturdyPair(_silo).totalBorrow();
        uint256 numerator = UTIL_PREC * (totalBorrow + _borrowAmount);
        uint256 utilizationRate = numerator / totalAsset;
        uint256 utilizationTarget = manager.utilizationTargets(strategy);
        // 0 means 100% utilization
        if (utilizationTarget == 0) {
            utilizationTarget = UTIL_PREC;
        }

        // Just in-time liquidity
        if (utilizationRate > utilizationTarget) {
            uint256 requiredAmount = (numerator / utilizationTarget) -
                totalAsset;
            manager.requestLiquidity(requiredAmount, _silo, slippage);
        }

        /// ToDo: Based on sturdy-silo
        {
            if (_collateralAmount > 0) {
                IERC20(_collateralAsset).safeTransferFrom(
                    _borrower,
                    address(this),
                    _collateralAmount
                );
                IERC20(_collateralAsset).safeApprove(_silo, _collateralAmount);
                ISturdyPair(_silo).addCollateral(_collateralAmount, _borrower);
            }

            if (_borrowAmount > 0) {
                ISturdyPair(_silo).borrowAssetOnBehalfOf(
                    _borrowAmount,
                    _borrower
                );
                IERC20(asset).safeTransfer(_receiver, _borrowAmount);
            }
        }
    }
}