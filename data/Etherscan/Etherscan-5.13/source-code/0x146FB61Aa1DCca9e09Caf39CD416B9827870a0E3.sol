        require(staking.isInitialized, "PWS-5: invalid staking id");
        require(staking.isDepositsOpened, "PWS-6: deposits closed");

        address operator = _msgSender();

        UserDeposits storage userDeposits = userDeposits_[operator][_stakingId];
        require(userDeposits.deposits.length - userDeposits.headIndex < MAX_STAKES_PER_USER, "PWS-7: max stakes per user");

        IERC20(token_).safeTransferFrom(operator, address(this), _amount);

        userDeposits.deposits.push(Deposit({amount: _amount, startTime: block.timestamp}));

        emit Stake(operator, _stakingId, _amount, block.timestamp);
    }

