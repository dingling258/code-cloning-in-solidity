        uint256 withdrawAmount
    ) {
        Staking storage staking = stakings_[_stakingId];
        uint256 stakingPeriod = staking.lockPeriod;

        UserDeposits storage userDeposits = userDeposits_[_user][_stakingId];
        uint256 depositsLength = userDeposits.deposits.length;
        uint256 headIndex = userDeposits.headIndex;

        if (depositsLength <= headIndex) return 0;

        Deposit memory deposit;
        for (uint256 i = headIndex; i < depositsLength;) {
            deposit = userDeposits.deposits[i];

            if (block.timestamp >= deposit.startTime + stakingPeriod) {
