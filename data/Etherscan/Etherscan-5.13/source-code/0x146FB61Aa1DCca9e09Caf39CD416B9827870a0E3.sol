        for (uint256 i; i < _stakingIds.length;) {
            Staking storage staking = stakings_[_stakingIds[i]];
            require(staking.isInitialized, "PWS-3: invalid staking id");
            staking.isDepositsOpened = true;
            unchecked { ++i; }
        }
    }

