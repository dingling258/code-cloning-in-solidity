        require(_amount != 0, "PWS-8: zero withdraw amount");

        Staking storage staking = stakings_[_stakingId];
        require(staking.isInitialized, "PWS-9: invalid staking id");

        uint256 stakingPeriod = staking.lockPeriod;

        address operator = _msgSender();

        UserDeposits storage userDeposits = userDeposits_[operator][_stakingId];
        uint256 depositsLength = userDeposits.deposits.length;
        uint256 headIndex = userDeposits.headIndex;
        require(depositsLength > headIndex, "PWS-10: no active deposits");

        uint256 deductAmount = _amount;

        Deposit memory deposit;
        for (uint256 i = headIndex; i < depositsLength;) {
            deposit = userDeposits.deposits[i];

            if (block.timestamp < deposit.startTime + stakingPeriod) break;

            if (deductAmount < deposit.amount) {
                userDeposits.deposits[i].amount = deposit.amount - deductAmount;
                deductAmount = 0;
