        Staking storage staking = stakings_[_stakingId];
        if (!staking.isDepositsOpened) {
            return false;
        }

        UserDeposits storage userDeposits = userDeposits_[_user][_stakingId];
        return userDeposits.deposits.length - userDeposits.headIndex < MAX_STAKES_PER_USER;
    }

