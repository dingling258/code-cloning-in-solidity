contract PairedWorldStaking is AccessControlUpgradeableEx {
    using SafeERC20 for IERC20;

    uint256 public constant MAX_STAKES_PER_USER = 20;

    address public token_;

    mapping(uint256 stakingId => Staking) public stakings_;
    mapping(address user => mapping(uint256 stakingId => UserDeposits)) public userDeposits_;

    event Stake(address indexed user, uint256 indexed stakingId, uint256 amount, uint256 timestamp);
    event Withdraw(address indexed user, uint256 indexed stakingId, uint256 amount, uint256 timestamp);

    function version() external pure returns (string memory) { return "PairedWorldStaking v1"; }

    constructor() {
        _disableInitializers();
    }

    function initialize(address _admin, address _token, StakingSettings[] calldata _stakings) external initializer {
        _grantRole(DEFAULT_ADMIN_ROLE, _admin);

        require(_token != address(0), "PWS-1: zero token address");
        token_ = _token;

        _addStakings(false, _stakings);
    }

    function addStakings(StakingSettings[] calldata _stakings) external onlyRole(DEFAULT_ADMIN_ROLE) {
        _addStakings(true, _stakings);
    }

    function _addStakings(bool _ensureFirstInit, StakingSettings[] calldata _stakings) private {
        for (uint256 i; i < _stakings.length;) {
            _addStaking(_ensureFirstInit, i, _stakings[i]);
            unchecked { ++i; }
        }
    }

    function _addStaking(bool _ensureFirstInit, uint256 _stakingId, StakingSettings calldata _staking) private {
        Staking storage staking = stakings_[_stakingId];

        if (_ensureFirstInit) {
            require(!staking.isInitialized, "PWS-2: staking already exists");
        }

        staking.isInitialized = true;
        staking.isDepositsOpened = _staking.isDepositsOpened;
        staking.lockPeriod = _staking.lockPeriod;
    }

    function getUserDeposits(address _user, uint256 _stakingId) external view returns (UserDeposits memory) {
        return userDeposits_[_user][_stakingId];
    }

    function getUserDepositsHeadIndex(address _user, uint256 _stakingId) external view returns (uint256) {
        return userDeposits_[_user][_stakingId].headIndex;
    }

    function getUserDepositsArrayLength(address _user, uint256 _stakingId) external view returns (uint256) {
        return userDeposits_[_user][_stakingId].deposits.length;
    }

    function getUserDepositsArray(
        address _user,
        uint256 _stakingId,
        uint256 _startIndex,
        uint256 _maxCount
    ) external view returns (
        Deposit[] memory
    ) {
        Deposit[] storage deposits = userDeposits_[_user][_stakingId].deposits;
        uint256 length = deposits.length;

        if (_startIndex >= length) {
            return new Deposit[](0);
        }

        uint256 end = _maxCount == 0 ? length : _min(_startIndex + _maxCount, length);

        Deposit[] memory result = new Deposit[](end - _startIndex);

        for (uint256 i = _startIndex; i < end;) {
            result[i - _startIndex] = deposits[i];
            unchecked { ++i; }
        }

        return result;
    }

